<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GIEMPLOYEE" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueMIS</item>
        <item name="colorPrimaryVariant">@color/blueMISDARK</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueMIS</item>
        <item name="colorSecondaryVariant">@color/blueMISDARK</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="customstyle">
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textColorHint">@color/black2</item>
        <item name="android:progressTint">@color/black2</item>
        <item name="android:indeterminateTint">@color/black2</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="backgroundTint">@color/black2</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="logo_hris">
        <item name="android:src">@drawable/hris</item>
    </style>
</resources>